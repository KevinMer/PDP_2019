#:kivy 1.10.1


Root:
    spacing: 10
    padding: 10
    cols: 2
    rows: 6
    titre: ""

    BoxLayout:
        spacing: 10
        padding: 10
        orientation: 'horizontal'
        height: 100
        dropdown1: dropdown1.__self__
        
        Button:
            id:bbbttn
            text: "Fichier"
            font_size: "30sp"
            on_parent: dropdown1.dismiss()
            on_release: dropdown1.open(self)

            DropDown:    
                id: dropdown1

                Button:
                    id:bouton_ouvrir
                    text: 'Ouvrir'
                    size_hint_y: None
                    on_release: root.show_load()
                Button:
                    id: bouton_sauvegarder
                    text: 'Sauvegarder Log'
                    size_hint_y: None
                Button:
                    id:boutton_quitter
                    text: 'Quitter'

                    size_hint_y: None
                    on_release: root.quitter()

        Button:
            text: "Affichage"
            font_size: "30sp"
        Button:
            text: "Options"
            font_size: "30sp"
    BoxLayout:
        
    BoxLayout:
        
        id:bl_titre
        orientation:'horizontal'
        BoxLayout:

        
        Label:
            id: titre_echantillon
            font_size: "30sp"
            color: [256, 256, 256, 1]
            text: root.titre
            
    BoxLayout:
    BoxLayout:
    BoxLayout:
    BoxLayout:
   

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: './'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Annuler"
                on_release: root.cancel()
               

            Button:
                text: "Ouvrir"
                on_release: root.load(filechooser.path, filechooser.selection)
                

