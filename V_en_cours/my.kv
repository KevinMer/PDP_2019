#:kivy 1.10.1
#coding: utf-8
#version application 0.2
ScreenManagement:
    
    EcranPremier:
    EcranFct:
    
    
<EcranPremier>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 15
            orientation:"horizontal"
            Image:
                source:"logo.png"
            Label:
                text:"DPN 3000"
                font_size: "100sp"
                color: [256, 256, 256, 1]

        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                padding: 100
                Label:
                    text:" Choisir un fichier: "
                    font_size: "40sp"
                    color: [256, 256, 256, 1]
                
                BoxLayout:
                    padding:75
                    Button:
                        background_normal: ''
                        background_color: (75/255, 127/255, 209/255,1)
                        text: "Ouvrir"
                        font_size: "30sp"
                        on_release: root.manager.current = 'ecran_principale'
                        on_release:root.show_load()

<EcranFct>:
    name: 'ecran_principale'
    EcranFctMethod:
        id:ecranMethod


<EcranFctMethod>:
    id: ecranfct
    spacing: 10
    padding: 10
    cols: 1
    rows: 2
    titre: "Echantillon"
    corps:""


    BoxLayout:
        id:barreOutils

        size_hint_y:  0.05
        canvas:
            Color:
                rgba:0.07,0.10,0,1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            height: 10
            dropdown1: dropdown1.__self__
            dropdown2: dropdown2.__self__


            Button:
                background_normal: ''
                background_color: (0.07,0.10,0,1)
                color: [0.949, 0.945, 0.945, 1]
                id:bouton_fichier
                text: "Fichier"
                font_size: "15sp"
                on_parent: dropdown1.dismiss()
                on_release: dropdown1.open(self)



                DropDown:
                    id: dropdown1

                    Button:
                        height: 44
                        size_hint_y: barreOutils.size_hint_y
                        background_normal: ''
                        background_color: (0.07,0.10,0,1)
                        color: [0.949, 0.945, 0.945, 1]
                        id:bouton_ouvrir
                        text: 'Ouvrir'
                        size_hint_y: None
                        on_release: ecranfct.show_load()
                    Button:
                        height: 44
                        background_normal: ''
                        background_color: (0.07,0.10,0,1)
                        color: [0.949, 0.945, 0.945, 1]
                        id: bouton_sauvegarder
                        text: 'Sauvegarder resultats'
                        size_hint_y: None
                        on_release: ecranfct.show_save()
                    Button:
                        height: 44
                        background_normal: ''
                        background_color: (0.07,0.10,0,1)
                        color: [0.949, 0.945, 0.945, 1]
                        id:boutton_quitter
                        text: 'Quitter'

                        size_hint_y: None
                        on_release: ecranfct.quitter()

            Button:
                background_normal: ''
                background_color: (0.07,0.10,0,1)
                color: [0.949, 0.945, 0.945, 1]
                text: "Affichage"
                font_size: "15sp"
                on_release:ecranfct.printest()

            Button:
                background_normal: ''
                background_color: (0.07,0.10,0,1)
                color: [0.949, 0.945, 0.945, 1]
                id:bouton_option
                text: "Options"
                font_size: "15sp"
                on_parent: dropdown2.dismiss()
                on_release: dropdown2.open(self)

                DropDown:
                    id: dropdown2

                    Button:
                        height: 44
                        background_normal: ''
                        background_color: (0.07,0.10,0,1)
                        color: [0.949, 0.945, 0.945, 1]

                        text: 'Param\u00e8tres'
                        size_hint_y: None
                        on_release: ecranfct.ouverture_parametres()
                    Button:
                        height: 44
                        background_normal: ''
                        background_color: (0.07,0.10,0,1)
                        color: [0.949, 0.945, 0.945, 1]
                        text: 'Documentation'
                        size_hint_y: None
        BoxLayout:

    BoxLayout:
        BoxLayout:
            TableOnglets:
                id:les_onglets
                
                do_default_tab: False

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: './'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Annuler"
                on_release: root.cancel()

            Button:
                text: "Ouvrir"
                on_release: root.load(filechooser.path, filechooser.selection)
                

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            path: "./"

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Annuler"
                on_release: root.cancel()

            Button:
                text: "Sauvegarder"
                on_release: root.save(filechooser.path, text_input.text)


<ParametreDialog>:
    BoxLayout:
        canvas:
            Color:
                rgba:(75/255, 127/255, 209/255,1)
            Line:
                width:3
                rectangle:(self.x, self.y, self.width, self.height)
            Color:

                rgba:0.949, 0.945, 0.945, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size: root.size
        pos: root.pos
        orientation: "vertical"
        BoxLayout:
            padding:0,90,90,90
            Label:
                id: lab_premier_para
                color: [256, 256, 256, 1]
                text: "Seuil pour le nombre de marqueurs (d\u00e9faut:2)"
            TextInput:
                id: text_input1_para
                text:root.nb

                multiline: False
        BoxLayout:
            padding:0,90,90,90
            Label:
                id: lab_deuxieme_para
                color: [256, 256, 256, 1]
                text: "Seuil pour le taux de contamination (d\u00e9faut:0.05)"
            
            TextInput:
                id: text_input2_para
                text:root.conta
                multiline: False
                center : self.center
        BoxLayout:
            padding:0,90,90,90
            Label:
                id:lab_troisieme_para
                color: [256, 256, 256, 1]
                text: "Seuil pour la hauteur des pics (d\u00e9faut:1/3)"
            TextInput:
                id: text_input3_para
                text:root.hauteur

                multiline: False
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Annuler"
                on_release: root.cancel()

            Button:
                text: "Valider"
                on_release: root.save_parametres(text_input1_para.text,text_input2_para.text,text_input3_para.text)

<ResAnalyse>:
    id:resanalyse
    titre:""
    padding:20

    canvas:
        Color:
            rgba:(75/255, 127/255, 209/255,1)
        Line:
            width:3
            rectangle:(self.x, self.y, self.width, self.height)
        Color:
            rgba:0.949, 0.945, 0.945, 1

        Rectangle:
            pos: self.pos
            size: self.size

     
   

    GridLayout:
        id: resultat_grd_frame
        cols: 1
        rows: 4
        spacing:10

        BoxLayout:
            size_hint_y:  0.10

            Label:
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: [256, 256, 256, 1]
                text: "Echantillon : " + root.titre
            BoxLayout:
        BoxLayout:
            padding:40,0,40,0
            GridLayout:
                cols: 1
                rows: 16
                orientation: "vertical"
                id:le_tableau


                canvas:
                    Color:
                        rgba:(75/255, 127/255, 209/255,1)
                    Line:
                        width:2
                        rectangle:(self.x, self.y, self.width, self.height)


        BoxLayout:
            id:ensemble_info
            orientation: "horizontal"
            size_hint_y:  0.25
            padding:40,20,40,0
            BoxLayout:
                orientation:"vertical"
                BoxLayout:
                    size_hint_y: 0.30
                    id:nom_prel
                    Label:
                        text:u'Le Pr\u00e9l\u00e8vement Foetal est: '
                        color: [256, 256, 256, 1]
                BoxLayout:
                    padding:40,0,40,20
                    orientation: "horizontal"  
                    ToggleButton:
                        size_hint_y: 0.60
                        id:TButtonNonContamine
                        text:"Non Contamin\u00e9"
                        group:root.NvGroupe
                    ToggleButton:
                        size_hint_y: 0.60
                        id:TButtonContamine
                        text: "Contamin\u00e9"
                        group:root.NvGroupe
            
        BoxLayout:
            spacing:150
            size_hint_y:  0.06
            padding:200,0,200,0
           
            Button:

                id:bouton_export
                background_normal: ''
                background_color: (75/255, 127/255, 209/255,1)
                color: [0.949, 0.945, 0.945, 1]
                on_release:root.show_save() 
                text:'Export PDF'
                
            Button:

                background_normal: ''
                background_color: (75/255, 127/255, 209/255,1)
                color: [0.949, 0.945, 0.945, 1]
                text:'Imprimer'
            Button:

                background_normal: ''
                background_color: (75/255, 127/255, 209/255,1)
                color: [0.949, 0.945, 0.945, 1]
                text:'Log'

<LigneTableau>:
    canvas:
        Color:
            rgba:root.color_mode

        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id:col1
        color: root.color_text
        text:root.t_col1
    Label:
        id:col2
        color:root.color_text 
        text:root.t_col2
    Label:
        id:col3
        color: root.color_text
        text:root.t_col3




<InfosConclusion>:
    
    BoxLayout:
        padding:2
        canvas:
            Color:
                rgba:(75/255, 127/255, 209/255,1)
            Line:
                width:2
                rectangle:(self.x, self.y, self.width, self.height)
        orientation:"vertical"
        BoxLayout:
            canvas:
                Color:
                    rgba:(49/255, 140/255, 231/255,0.2)

                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text:root.TLigneInfo1
                color: [256, 256, 256, 1]

        BoxLayout:
            canvas:
                Color:
                    rgba:(0.949, 0.945, 0.945, 1)

                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text:root.TLigneInfo2
                color: [256, 256, 256, 1]
        BoxLayout:
            canvas:
                Color:
                    rgba:(49/255, 140/255, 231/255,0.2)

                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text:root.TLigneInfo3
                color: [256, 256, 256, 1]
        


